.head, .gift {
  width: 100%;
  /* background: #FFFFFF; */
}
.header {
  width: 100%;
  height: 270rpx;
  background: url(/static/user/upgrade.png) no-repeat;
  background-size: 100% 100%;
}
.header-center {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  /* flex-direction: column; */
  left: 0;
  right: 0;
  width: 550rpx;
  height: 260rpx;
  margin: 0 auto;
  margin-top: -240rpx;
  border-radius: 10px;
}
.header-center .center-top, .header-center .center-top1 {
  width: 200rpx;
  position: relative;
  /* display: flex; */
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 40rpx;
  /* padding: 0 calc(50% - 70upx); */
}
.header-center .center-top image, .header-center .center-top1 image {
  margin: 0 30rpx;
  width: 132rpx;
  height: 132rpx;
  border: 4rpx solid #FFFFFF;
  border-radius: 70rpx;
}
.header-center .center-top .level, .header-center .center-top1 .level {
  width: 172rpx;
  height: 40rpx;
  color: #FFFFFF;
  margin: 0 10rpx;
  line-height: 40rpx;
  text-align: center;
  position: relative;
  margin-top: -30rpx;
  border: 4rpx solid #FFFFFF;
  background-color: #ffa442;
  border-radius: 34rpx;
}
.header-center .center-top .level text, .header-center .center-top1 .level text {
  color: #FFFFFF;
}
.header-center .center-top1 {
  margin: 40rpx calc(50% - 100rpx) 0;
}
.header-center .center-tops image {
  margin-top: 80rpx;
  width: 150rpx;
  height: 70rpx;
}
.box {
  margin: 10rpx 30rpx;
  border-radius: 10rpx;
  background: #FFFFFF;
  box-shadow: 0 0 10rpx rgba(102, 102, 102, 0.2);
}
.box .lis, .box .li {
  text-align: center;
  font-weight: bold;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}
.box .lis .left, .box .li .left {
  width: 45%;
}
.box .lis .center, .box .li .center {
  width: 35%;
}
.box .lis .right, .box .li .right {
  width: 20%;
}
.box .lis .right text, .box .li .right text {
  color: #e42e32;
  font-weight: bold;
}
.box .li {
  height: 80rpx;
  font-weight: 100;
  line-height: 80rpx;
  border-top: 2rpx solid #F2F2F2;
}
.transfer, .transfers {
  color: #fff;
  background: #ff594d;
  border-radius: 10rpx;
  height: 80rpx;
  width: 80%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 36rpx;
  margin: 30rpx 10%;
}
.transfers {
  background: #AAAAAA;
}

