.top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 30rpx;
  margin-top: 0;
  padding: 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.4);
}
.top .top-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
}
.top .top-text {
  text-indent: 60rpx;
  padding-left: 30rpx;
  width: calc(100% - 210rpx);
  font-size: 30rpx;
  color: #323232;
}
.navbar {
  padding: 10rpx 0;
  border-bottom: 2rpx solid #F2F2F2;
}
.navbar .head {
  width: 140rpx;
  margin: 0 20rpx;
  font-weight: bold;
  text-align: center;
  line-height: 70rpx;
  border-bottom: 6rpx solid #7f3e74;
}
.li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #F2F2F2;
}
.li .image {
  width: 250rpx;
  height: 170rpx;
}
.li .right {
  padding: 10rpx;
  padding-right: 0;
  width: calc(100% - 270rpx);
}
.li .right .title {
  height: 100rpx;
  font-size: 32rpx;
  line-height: 50rpx;
}
.li .right .time {
  color: #888888;
  font-size: 30rpx;
}
.clamp {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

