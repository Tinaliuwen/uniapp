/* 头部轮播图 */
.carousel {
  /* height: 652upx; */
  position: relative;
  background: #FFFFFF;
}
.carousel .loaded {
  height: 400rpx;
  width: 100%;
}
.carousel swiper {
  height: 100%;
}
.carousel .image-wrapper {
  width: 100%;
  height: 100%;
  background: #FFFFFF;
}
.carousel .swiper-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-align-content: center;
          align-content: center;
  height: 750rpx;
  overflow: hidden;
}
.carousel .swiper-item image {
  width: 100%;
  height: 100%;
}
.information {
  padding: 30rpx;
}
.information .title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 60rpx;
}
.information .title text {
  color: #f10b26;
  margin-right: 10rpx;
}
.information .text {
  color: #606266;
  font-size: 30rpx;
  line-height: 60rpx;
}
.information .text text {
  color: #f10b26;
}
.information .btn {
  float: right;
  width: 180rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  background: #7f3e74;
  border-radius: 20rpx;
}
.guess-section {
  background: #FFFFFF;
}
.guess-section .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx 0 10rpx;
}
.guess-section .border {
  width: 40rpx;
  height: 6rpx;
  margin-top: -40rpx;
  background: #7f3e76;
}
.guess-section .content {
  margin-top: 20rpx;
  text-indent: 80rpx;
  background: #FFFFFF;
  padding: 20rpx 30rpx 50rpx;
